<div class="wrapper">
    <div class="profile-background">
        <div class="filter-black"></div>
    </div>
    <div id="app_projects">
        <h3 v-if="projects === null" class="text-center">Please Login to Get Your Joined Projects</h3>
        <h4 v-else="projects === null" class="text-center">Your Projects</h4>
        <div id="my-tab-content" class="tab-content">
            <div class="tab-pane active" id="follows">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <ul class="list-unstyled follows">
                            <template v-for="item in projects">
                                <li>
                                    <div class="row">
                                        <h3>{{item.title}}</h3>
                                        <div class="col-md-7 col-xs-4">
                                            <span class="label label-default">{{item.project_type}}</span>
                                            <small>{{item.description}}</small>
                                        </div>
                                        <div class="col-md-3 col-xs-2">
                                            <div class="text-right text">
                                                <button v-on:click="ViewProject(item.pid)" class="btn btn-xs">View Project Detail</button>
                                            </div>
                                        </div>
                                    </div>
                                </li>
                                <hr />
                            </template>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    fetch('@Url.Action("GetProjectsByUsername", "Projects")')
        .then(function (response) {
            response.json().then(function (data) {
                app_projects._data.projects = data;
                console.log(app_projects._data.projects);
            });
        });
    var app_projects = new Vue({
        el: '#app_projects',
        data: {
            projects: null
        },
        methods: {
            ViewProject: function (pid) {
                console.log(pid);
                location.href = '@Url.Action("Project", "Projects", new { pid = "PID" })'.replace("PID", pid);
            }
        }
    });
</script>
