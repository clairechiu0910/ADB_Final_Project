@model Final_Project.Models.User

<div class="register-background">
    <div class="filter-black"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1 ">
                <div class="register-card">
                    @if (ViewBag.IsEdit)
                    {
                        <h3 class="title">Edit Profile</h3>
                    }
                    else
                    {
                        <h3 class="title">Registration Form</h3>
                    }
                    <form asp-controller="User" asp-action="EditUser" method="post" enctype="multipart/form-data" class="register-form">
                        @if (!ViewBag.IsEdit)
                        {
                            <label>Username</label>
                            <input asp-for="Username" type="text" class="form-control" placeholder="Username" value="@Model.Username">
                        }
                        <input asp-for="UID" type="hidden" class="form-control" value="@Model.UID">

                        <label>Password</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Password" value="@Model.Password">

                        <label>Name</label>
                        <input asp-for="Name" type="text" class="form-control" placeholder="Name" value="@Model.Name">

                        <label>Email</label>
                        <input asp-for="Email" type="text" class="form-control" placeholder="Email" value="@Model.Email">

                        <label>Country</label>
                        <input asp-for="Country" type="text" class="form-control" placeholder="Country" value="@Model.Country">

                        <label>Title</label>
                        <input asp-for="Title" type="text" class="form-control" placeholder="Title" value="@Model.Title">

                        <label>Affiliation</label>
                        <input asp-for="Affiliation" type="text" class="form-control" placeholder="Affiliation" value="@Model.Affiliation">

                        <div class="card-description form-group text-danger">
                            @ViewBag.errMsg
                        </div>

                        @if (ViewBag.IsEdit)
                        {
                            <button type="submit" class="btn btn-danger btn-block">Submit</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-danger btn-block">Register</button>
                        }
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="footer register-footer text-center">
        <h6>&copy; 2020 - Final_Project</h6>
    </div>
</div>
